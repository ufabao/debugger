{
  "CompileFlags": {
    "Add": [
      "-std=c++17",
      "-Wall",
      "-Wextra",
      "-Wpedantic",
      "-Wshadow",
      "-Wconversion",
      "-Wsign-conversion",
      "-Wnull-dereference",
      "-Wdouble-promotion",
      "-Wformat=2"
    ]
  },
  "Diagnostics": {
    "UnusedIncludes": "Strict",
    "ClangTidy": {
      "Add": [
        "bugprone-*",
        "cert-*",
        "cppcoreguidelines-*",
        "modernize-*",
        "performance-*",
        "portability-*",
        "readability-*"
      ],
      "Remove": [
        "modernize-use-trailing-return-type",
        "readability-identifier-length"
      ],
      "CheckOptions": {
        "readability-identifier-naming.VariableCase": "camelBack",
        "readability-identifier-naming.ClassCase": "CamelCase",
        "readability-identifier-naming.FunctionCase": "camelBack",
        "readability-identifier-naming.NamespaceCase": "lower_case"
      }
    }
  },
  "Index": {
    "Background": "Build",
    "StandardLibrary": true
  },
  "InlayHints": {
    "Enabled": true,
    "ParameterNames": true,
    "DeducedTypes": true
  },
  "Hover": {
    "ShowAKA": true
  },
  "Completion": {
    "AllScopes": true
  }
}